{
  "name": "hagal",
  "description": "A fairly simple framework which combines event sourcing with a plugin architecture to produce simple, robust multi-user applications.",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jameswilddev/HAgAl"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.11",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.12.3",
    "jasmine": "^3.3.0",
    "npm-run-all": "^4.1.3",
    "npm-watch": "^0.4.0",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "watch": {
    "oneOffJasmine": {
      "patterns": [
        "*.{js,map,d.ts}"
      ],
      "quiet": true
    }
  },
  "scripts": {
    "oneOff": "npm-run-all oneOffTypescript oneOffJasmine",
    "oneOffTypescript": "tsc --project .",
    "oneOffJasmine": "nyc --check-coverage --all --exclude \"*.Tests.*\" --lines 100 --functions 100 --branches 100 --statements 100 jasmine --config=jasmine.json",
    "watch": "npm-run-all --parallel watchTypescript watchJasmine",
    "watchTypescript": "tsc --project . --watch",
    "watchJasmine": "npm-watch oneOffJasmine"
  }
}
